<%= render 'common/errors', model: @comment %>


<%= form_for [@article, @comment] do |f| %>
<div class="form-group">
  <%= f.label :commenter %>
  <%= f.text_field :commenter %>
</div>
<div class="form-group">
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>
<div class="form-group">
  <%= f.submit %>
</div>
<% end %>
